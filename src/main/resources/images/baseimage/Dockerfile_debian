ARG VERSION=latest
FROM debian:$VERSION
RUN apt update &&\
  apt install -y \
    git \
    mercurial \
    autoconf \
    automake \
    autopoint \
    gettext \
    libgettextpo-dev \
    libtool \
    libgmp-dev \
    gperf \
    bison \
    cmake \
    strace \
    unzip \
    wget \
    rsync \
    bash \
    coreutils \
    build-essential

COPY ./ca.pem /etc/ssl/certs/
WORKDIR /src/
